<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6">
          <a class="active" href="#login">Sign in</a>
        </li>
        <li class="tab col s6">
          <a href="#register">Sign up</a>
        </li>
      </ul>
    </div>

    <div id="login" class="col s6 offset-s3">
      <h1>Sign in</h1>

      {{#if error_login}}
        <p class="alert">{{error_login}}</p>
      {{/if}}

      <form action="/auth/login" method="POST">
        <div class="input-field">
          <label for="email">Email</label>
          <input
            name="email"
            id="email"
            type="text"
            class="validate"
            required
          />
          <span class="helper-text" data-error="Error email"></span>
        </div>

        <div class="input-field">
          <label for="password">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="validate"
            required
          />
          <span class="helper-text" data-error="Error password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button class="btn btn-primary" type="submit">Sign in</button>
      </form>
    </div>

    <div id="register" class="col s6 offset-s3">
      <h1>Sign up</h1>

      {{#if error_register}}
        <p class="alert">{{error_register}}</p>
      {{/if}}

      <form action="/auth/register" method="POST">

        <div class="input-field">
          <label for="reg_email">Email</label>
          <input
            name="reg_email"
            id="reg_email"
            type="text"
            class="validate"
            required
          />
          <span class="helper-text" data-error="Error email"></span>
        </div>

        <div class="input-field">
          <label for="name">Name</label>
          <input name="name" id="name" type="text" class="validate" required />
          <span class="helper-text" data-error="Error name"></span>
        </div>

        <div class="input-field">
          <label for="reg_password">Password</label>
          <input
            name="reg_password"
            id="reg_password"
            type="password"
            class="validate"
            required
          />
          <span class="helper-text" data-error="Error password"></span>
        </div>

        <div class="input-field">
          <label for="reg_password_confirm">Confirm password</label>
          <input
            name="reg_password_confirm"
            id="reg_password_confirm"
            type="password"
            class="validate"
            required
          />
          <span class="helper-text" data-error="Error confirm password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button class="btn btn-primary" type="submit">Sign up</button>
      </form>
    </div>

  </div>
</div>