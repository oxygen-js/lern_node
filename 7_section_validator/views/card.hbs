<h1>Cart</h1>

<div class="card-block">
  {{#if courses.length}}
    <table>

      <thead>
        <tr>
          <th> Name Course </th>
          <th> Count </th>
          <th> Action </th>
        </tr>
      </thead>

      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class="btn btn-small js-remove"
                data-id="{{id}}"
                data-csrf="{{@root.csrf}}"
              >X</button>
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>

    <p>
      <strong>Price: </strong>
      <span class="price"> {{price}} </span>
    </p>

    <form action="/orders" method="post">
      <input type="hidden" name="_csrf" value="{{csrf}}" />
      <button type="submit" class="btn">Orders</button>
    </form>

  {{else}}
    <p>Cart is empty</p>
  {{/if}}
</div>