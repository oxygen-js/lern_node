<h1>Add new Courese</h1>

{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
  <div class="input-field">
    <label for="title">Name Courses</label>
    <input
      name="title"
      id="title"
      type="text"
      class="validate"
      value="{{data.title}}"
      required
    />
    <span class="helper-text" data-error="Error title"></span>
  </div>
  <div class="input-field">
    <label for="price">Price</label>
    <input
      name="price"
      id="price"
      type="number"
      class="validate"
      min="1"
      value="{{data.price}}"
      required
    />
    <span class="helper-text" data-error="Error price"></span>
  </div>
  <div class="input-field">
    <label for="logo">Logo</label>
    <input name="logo" id="logo" type="text" class="validate" value="{{data.logo}}" required />
    <span class="helper-text" data-error="Error logo"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}" />

  <button class="btn btn-primary" type="submit">Save</button>
</form>