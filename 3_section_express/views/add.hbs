<h1>Add new Courese</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <label for="title">Name Courses</label>
        <input name="title" id="title" type="text" class="validate" required>
        <span class="helper-text" data-error="Error title"></span>
    </div>
    <div class="input-field">
        <label for="price">Price</label>
        <input name="price" id="price" type="number" class="validate" required min="1">
        <span class="helper-text" data-error="Error price"></span>
    </div>
    <div class="input-field">
        <label for="logo">Logo</label>
        <input name="logo" id="logo" type="text" class="validate" required>
        <span class="helper-text" data-error="Error logo"></span>
    </div>

    <button class="btn btn-primary">Save</button>
</form>
